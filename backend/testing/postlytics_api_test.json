    {
      "name": "Filter Posts by Date",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": { "raw": "https://postlytics.onrender.com/posts?from=2025-09-01&to=2025-09-30", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts"], "query":[{"key":"from","value":"2025-09-01"},{"key":"to","value":"2025-09-30"}] }
