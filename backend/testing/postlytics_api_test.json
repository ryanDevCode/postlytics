    "_postman_id": "postlytics-api-001"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user\": {\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n  }\n}"
        },
        "url": { "raw": "https://postlytics.onrender.com/users", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["users"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user\": {\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n  }\n}"
        },
        "url": { "raw": "https://postlytics.onrender.com/users/sign_in", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["users","sign_in"] }
      }
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"post\": {\n    \"content\": \"Hello Postlytics! #rails #api\"\n  }\n}"
        },
        "url": { "raw": "https://postlytics.onrender.com/posts", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts"] }
      }
    },
    {
      "name": "List Posts",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": { "raw": "https://postlytics.onrender.com/posts", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts"] }
      }
    },
    {
      "name": "Create Comment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"comment\": {\n    \"content\": \"Nice post!\"\n  }\n}"
        },
        "url": { "raw": "https://postlytics.onrender.com/posts/1/comments", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts","1","comments"] }
      }
    },
    {
      "name": "List Comments",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": { "raw": "https://postlytics.onrender.com/posts/1/comments", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts","1","comments"] }
      }
    },
    {
      "name": "Filter Posts by Hashtag",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": { "raw": "https://postlytics.onrender.com/posts?hashtag=rails", "protocol": "https", "host": ["postlytics","onrender","com"], "path": ["posts"], "query":[{"key":"hashtag","value":"rails"}] }
